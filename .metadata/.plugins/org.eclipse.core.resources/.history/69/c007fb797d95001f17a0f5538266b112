package com.tpKafka_grupo10.controller;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;

@Controller
public class WebController {
    
	@GetMapping("/home/tienda")
    public String homeTienda() {
        return "home_tienda"; 
    }
	
	@GetMapping("/home/proveedor")
    public String homeProveedor() {
        return "home_proveedor"; 
    }
	
    @GetMapping("/orden-compra/crear")
    public String mostrarFormularioOrdenCompra() {
        return "crear_oc"; 
    }
  
    @GetMapping("/stock/actualizar/{productoId}")
    public String mostrarFormularioActualizarStock(@PathVariable Long productoId, Model model) {
        model.addAttribute("productoId", productoId);  // Pasar productoId al template
        return "actualizarStock";  // Nombre del template HTML sin la extensi√≥n .html
    }
}
